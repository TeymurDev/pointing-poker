{
  "name": "socket-typescript-api",
  "version": "1.0.0",
  "main": "dist/server.js",
  "license": "MIT",
  "dependencies": {
    "@types/express": "^4.17.13",
    "@types/node": "^16.7.12",
    "@types/socket.io": "^3.0.2",
    "concurrently": "^6.2.1",
    "express": "^4.17.1",
    "socket.io": "^4.2.0"
